.wrapper_with_padding
  %p#notice= notice
  %p
    %h2
      %b Category:
      #{category.name}
    .products_table
      %table.table.table-bordered
        %p Products:
        -category.products.each do |product|
          %tr
            %td= link_to product.title, category_product_url(category, product)
      = link_to 'Back', categories_path, class: 'btn btn-primary'
      - if current_user && !current_user.nil?
        .class_form
          %h2 New product
        = render 'products/form'
